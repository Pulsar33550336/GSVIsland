<ci:SpeechProviderControlBase x:Class="GSVIsland.Controls.SpeechProviderSettingsControls.GSVISpeechServiceSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSVIsland.Controls.SpeechProviderSettingsControls"
             xmlns:ci="http://classisland.tech/schemas/xaml/core"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:GSVISpeechServiceSettingsControl}}" Margin="0 6 0 6">

        <!-- 服务器地址 -->
        <TextBox
            Text="{Binding Settings.GSVIServerUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesign:HintAssist.Hint="服务器地址" />

        <!-- 访问令牌（先用文本框代替） -->
        <TextBox
            FontFamily="pack://application:,,,/GSVIsland;;;component/Font/#password, pack://application:,,,/ClassIsland;;;component/Assets/Fonts/#HarmonyOS Sans SC"
            Text="{Binding Settings.AccessToken, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            FontSize="14"
            materialDesign:HintAssist.Hint="访问令牌" />

        <!-- 模型名称 -->
        <TextBox
            Text="{Binding Settings.ModelName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesign:HintAssist.Hint="模型名称" />

        <!-- 情感 -->
        <TextBox
            Text="{Binding Settings.Emotion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesign:HintAssist.Hint="情感" />

        <!-- 文本语言 -->
        <TextBox
            Text="{Binding Settings.TextLang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesign:HintAssist.Hint="文本语言" />

        <!-- 提示文本语言 -->
        <TextBox
            Text="{Binding Settings.PromptTextLang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0 4 0 0"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            materialDesign:HintAssist.Hint="提示文本语言" />

        <Expander Background="{x:Null}"
                  Margin="0 6 0 0"
                  materialDesign:ExpanderAssist.VerticalHeaderPadding="2"
                  materialDesign:ExpanderAssist.HorizontalHeaderPadding="0"
                  Header="高级选项">
            <StackPanel>
                <!-- Top K -->
                <TextBox
                    Text="{Binding Settings.TopK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Top K" />

                <!-- Top P -->
                <TextBox
                    Text="{Binding Settings.TopP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Top P" />

                <!-- Temperature -->
                <TextBox
                    Text="{Binding Settings.Temperature, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Temperature" />

                <!-- 重复惩罚 -->
                <TextBox
                    Text="{Binding Settings.RepetitionPenalty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="重复惩罚" />

                <!-- 语速因子 -->
                <TextBox
                    Text="{Binding Settings.SpeedFactor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="语速因子" />

                <!-- 采样步数 -->
                <TextBox
                    Text="{Binding Settings.SampleSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="采样步数" />

                <!-- 随机种子 -->
                <TextBox
                    Text="{Binding Settings.Seed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0 4 0 0"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="随机种子" />
            </StackPanel>
        </Expander>
    </StackPanel>
</ci:SpeechProviderControlBase>